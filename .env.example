# ============================================================================
# AI Cache Layer - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ----------------------------------------------------------------------------
# Flask Configuration
# ----------------------------------------------------------------------------
FLASK_ENV=development
# Options: development, production, testing

SECRET_KEY=change-this-to-a-random-secret-key-in-production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"

DEBUG=True
# Set to False in production

FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ----------------------------------------------------------------------------
# Database Configuration (Neon PostgreSQL)
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://[user]:[password]@[endpoint].neon.tech/[dbname]?sslmode=require
# Direct PostgreSQL connection URL from Neon
# Format: postgresql://[user]:[password]@[endpoint].neon.tech/[dbname]?sslmode=require
# Get this from: Neon Console → Connection Details → Connection string
# IMPORTANT: Replace placeholders with your actual Neon connection details

# ----------------------------------------------------------------------------
# API Keys
# ----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key-here
# Google Gemini API key (global fallback)
# Get from: https://makersuite.google.com/app/apikey

MASTER_API_KEY=your-master-api-key-for-client-crud
# Master API key for protecting client CRUD operations
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Use this in X-API-Key header when calling /api/v1/clients endpoints

APIFY_API_TOKEN=your-apify-api-token-here
# Apify API token for RAG Web Browser scraping
# Get from: https://console.apify.com/account/integrations
# Used to scrape URLs and extract raw markdown content

# ----------------------------------------------------------------------------
# Encryption
# ----------------------------------------------------------------------------
FERNET_KEY=your-fernet-key-here
# Fernet encryption key for encrypting client secrets
# Generate with: python scripts/generate_key.py
# CRITICAL: Never lose this key! You won't be able to decrypt existing data without it

# ----------------------------------------------------------------------------
# Application Settings (Optional)
# ----------------------------------------------------------------------------
MAX_WORKERS=4
# Maximum concurrent workers for async operations

PAGE_TIMEOUT=30
# Timeout for page scraping in seconds

# ----------------------------------------------------------------------------
# Apify Settings (Optional)
# ----------------------------------------------------------------------------
APIFY_TIMEOUT=120
# Timeout for Apify scraping in seconds (default: 120)

APIFY_MAX_PARALLEL=5
# Maximum parallel Apify scrape requests (default: 5)

APIFY_MAX_RETRIES=3
# Maximum retry attempts for failed scrapes (default: 3)
